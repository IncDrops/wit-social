rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public, read-only access to the 'trends' collection
    match /trends/{trendId} {
      allow read: if true;
      allow write: if false; // Explicitly deny writes
    }
    // Deny all access to any other collections
    match /{document=**} {
        allow read, write: if false;
    }
  }
}
